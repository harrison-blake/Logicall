<%= turbo_stream.replace "loading" do %>
  <div class="bg-violet-50 dark:bg-violet-900/20 rounded-lg p-3.5">
    <p class="text-xs font-medium text-violet-500 dark:text-violet-400 mb-1">Assistant</p>
    <p class="text-stone-700 dark:text-stone-300 text-sm whitespace-pre-wrap leading-relaxed"><%= @response %></p>
  </div>
<% end %>

<% @logs.each do |log| %>
  <%= turbo_stream.prepend "action-log" do %>
    <div class="text-xs border-l-2 border-violet-400 dark:border-violet-500 pl-3 py-1.5">
      <span class="font-medium text-violet-600 dark:text-violet-400"><%= log.action_type %></span>
      <p class="text-stone-500 dark:text-stone-400"><%= log.details %></p>
      <p class="text-stone-400 dark:text-stone-600 mt-0.5"><%= log.created_at.strftime("%b %d %H:%M") %></p>
    </div>
  <% end %>
<% end %>
