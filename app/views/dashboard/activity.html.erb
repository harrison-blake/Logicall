<div class="px-6 py-8">
  <div class="max-w-3xl mx-auto">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-xl font-semibold tracking-tight text-stone-900 dark:text-stone-100">Activity</h1>
      <%= link_to "Dashboard", dashboard_path, class: "text-sm text-stone-400 dark:text-stone-500 hover:text-stone-600 dark:hover:text-stone-300 transition-colors" %>
    </div>

    <div class="bg-white dark:bg-stone-900 rounded-xl shadow-sm overflow-hidden">
      <div id="action-log" class="divide-y divide-stone-100 dark:divide-stone-800">
        <% if @recent_calls.any? || @recent_logs.any? %>
          <% entries = (@recent_calls + @recent_logs).sort_by(&:created_at).reverse %>
          <% entries.each do |entry| %>
            <div class="px-5 py-3.5 flex gap-4 items-start">
              <span class="text-xs text-stone-400 dark:text-stone-500 whitespace-nowrap pt-0.5 tabular-nums"><%= entry.created_at.strftime("%b %d %H:%M") %></span>
              <p class="text-sm text-stone-600 dark:text-stone-300">
                <% if entry.is_a?(CallTranscript) %>
                  <span class="inline-block w-1.5 h-1.5 rounded-full bg-emerald-400 mr-1.5 relative top-[-1px]"></span>
                  Call from <%= entry.caller_phone %> (<%= entry.call_duration %>s)
                <% else %>
                  <span class="inline-block w-1.5 h-1.5 rounded-full bg-violet-400 mr-1.5 relative top-[-1px]"></span>
                  <%= entry.details %>
                <% end %>
              </p>
            </div>
          <% end %>
        <% else %>
          <div class="px-5 py-12 text-center">
            <p class="text-sm text-stone-400 dark:text-stone-500">No activity yet. Activity will appear here as the agent handles calls and tasks.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
