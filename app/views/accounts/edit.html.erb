<div class="max-w-2xl mx-auto mt-16 px-4">
  <div class="mb-8">
    <h1 class="text-2xl font-semibold mb-2">Account Settings</h1>
    <p class="text-gray-600 dark:text-gray-400">Manage your organization's settings.</p>
  </div>

  <%= form_with model: @account, class: "space-y-6" do |form| %>
    <% if @account.errors.any? %>
      <div class="text-sm text-red-600 dark:text-red-400 space-y-1">
        <% @account.errors.full_messages.each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>

    <div>
      <%= form.label :company_name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
      <%= form.text_field :company_name, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white dark:bg-gray-800" %>
    </div>

    <div>
      <%= form.label :industry, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
      <%= form.text_field :industry, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white dark:bg-gray-800" %>
    </div>

    <div>
      <%= form.label :email, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
      <%= form.email_field :email, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white dark:bg-gray-800" %>
    </div>

    <div>
      <%= form.label :phone_number, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
      <%= form.text_field :phone_number, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white dark:bg-gray-800" %>
    </div>

    <div>
      <%= form.label :twilio_phone_number, "Twilio Phone Number", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
      <%= form.text_field :twilio_phone_number, placeholder: "+15551234567", class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white dark:bg-gray-800" %>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Your Twilio number for receiving calls via ElevenLabs.</p>
    </div>

    <div class="border-t border-gray-200 dark:border-gray-700 pt-6">
      <h2 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-4">Auto-Processing</h2>

      <div class="flex items-center justify-between mb-4">
        <div>
          <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Auto-process call transcripts</span>
          <p class="text-sm text-gray-500 dark:text-gray-400">Automatically create intakes and tasks from incoming calls.</p>
        </div>
        <label class="relative inline-flex items-center cursor-pointer">
          <%= form.check_box :auto_process_transcripts, class: "sr-only peer" %>
          <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600"></div>
        </label>
      </div>

      <div>
        <%= form.label :default_intake_owner_id, "Default Intake Owner", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <%= form.collection_select :default_intake_owner_id, @account.users.order(:name), :id, :name, { include_blank: "Account owner (default)" }, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white dark:bg-gray-800" %>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">User who will own auto-generated intakes. Falls back to account owner if not set.</p>
      </div>
    </div>

    <%= form.submit "Save Changes", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition-colors cursor-pointer" %>
  <% end %>
  <p class="mt-8 text-center">
    <%= link_to "Back to Dashboard", dashboard_path, class: "text-sm text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300" %>
  </p>
</div>
