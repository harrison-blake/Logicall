<div class="min-h-screen flex flex-col">
  <nav class="flex justify-between items-center px-6 py-4">
    <%= link_to "LOGICALL", root_path, class: "text-sm font-medium tracking-wide" %>
    <div class="flex gap-6 text-sm">
      <%= link_to "Log in", login_path, class: "text-gray-600 hover:text-gray-900" %>
    </div>
  </nav>

  <main class="flex-1 flex items-center justify-center px-6 py-8">
    <div class="w-full max-w-xs">
      <h1 class="text-xl font-semibold mb-1">Create an account</h1>
      <p class="text-sm text-gray-500 mb-6">Step 1 of 2: Company details</p>

      <%= form_with model: @account, url: accounts_path, class: "space-y-4" do |form| %>
        <% if @account.errors.any? %>
          <div class="text-sm text-red-600 space-y-1">
            <% @account.errors.full_messages.each do |message| %>
              <p><%= message %></p>
            <% end %>
          </div>
        <% end %>

        <div>
          <%= form.label :company_name, class: "block text-sm text-gray-600 mb-1" %>
          <%= form.text_field :company_name, autofocus: true, class: "w-full px-3 py-2 border border-gray-300 rounded text-sm focus:outline-none focus:ring-1 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label :industry, class: "block text-sm text-gray-600 mb-1" %>
          <%= form.text_field :industry, class: "w-full px-3 py-2 border border-gray-300 rounded text-sm focus:outline-none focus:ring-1 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label :phone_number, class: "block text-sm text-gray-600 mb-1" %>
          <%= form.text_field :phone_number, class: "w-full px-3 py-2 border border-gray-300 rounded text-sm focus:outline-none focus:ring-1 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label :email, "Email (optional)", class: "block text-sm text-gray-600 mb-1" %>
          <%= form.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded text-sm focus:outline-none focus:ring-1 focus:ring-blue-500" %>
        </div>

        <%= form.submit "Continue", class: "w-full bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium py-2 rounded cursor-pointer" %>
      <% end %>

      <p class="mt-6 text-center text-sm text-gray-500">
        Already have an account? <%= link_to "Log in", login_path, class: "text-blue-600 hover:text-blue-700" %>
      </p>
    </div>
  </main>
</div>
