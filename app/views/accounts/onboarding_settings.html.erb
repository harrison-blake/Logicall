<div class="max-w-2xl mx-auto mt-16 px-4">
  <div class="mb-8">
    <h1 class="text-2xl font-semibold mb-2">Onboarding Settings</h1>
    <p class="text-gray-600 dark:text-gray-400">Default steps automatically added to every new applicant.</p>
  </div>

  <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-md p-6">
    <% if @default_onboarding_steps.any? %>
      <ul class="space-y-2 mb-4">
        <% @default_onboarding_steps.each do |step| %>
          <li class="flex items-center justify-between text-sm p-2 rounded-md bg-gray-50 dark:bg-gray-700">
            <span class="text-gray-900 dark:text-gray-100"><%= step.title %></span>
            <%= link_to remove_default_step_accounts_path(step), data: { turbo_method: :delete, turbo_confirm: "Remove this default step?" }, class: "text-gray-400 hover:text-red-500 text-xs" do %>
              &times;
            <% end %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-sm text-gray-400 dark:text-gray-500 mb-4">No default steps yet.</p>
    <% end %>

    <%= form_with url: add_default_step_accounts_path, method: :post, class: "flex gap-2" do |f| %>
      <%= text_field_tag :title, nil, placeholder: "Add a default step...", class: "flex-1 px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md text-sm focus:outline-none focus:ring-1 focus:ring-blue-500 bg-white dark:bg-gray-800" %>
      <%= f.submit "Add", class: "bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 text-sm py-2 px-3 rounded-md cursor-pointer transition-colors" %>
    <% end %>
  </div>

  <p class="mt-8 text-center">
    <%= link_to "Back to Dashboard", dashboard_path, class: "text-sm text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300" %>
  </p>
</div>
