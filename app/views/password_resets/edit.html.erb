<div class="min-h-screen flex items-center justify-center px-6 bg-white dark:bg-stone-950">
  <div class="w-full max-w-sm">
    <h1 class="text-2xl font-semibold tracking-tight text-stone-900 dark:text-stone-100 mb-8">Set your password</h1>

    <%= form_with model: @user, url: password_reset_path(token: params[:token]), method: :patch, class: "space-y-5" do |form| %>
      <% if @user.errors.any? %>
        <div class="text-sm text-rose-600 dark:text-rose-400 bg-rose-50 dark:bg-rose-900/30 rounded-lg p-3 space-y-1">
          <% @user.errors.full_messages.each do |message| %>
            <p><%= message %></p>
          <% end %>
        </div>
      <% end %>

      <div>
        <%= form.label :password, "New password", class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
        <%= form.password_field :password, autofocus: true, class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
      </div>

      <div>
        <%= form.label :password_confirmation, "Confirm password", class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
        <%= form.password_field :password_confirmation, class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
      </div>

      <%= form.submit "Set password", class: "w-full bg-violet-600 hover:bg-violet-700 text-white text-sm font-medium py-2.5 rounded-lg cursor-pointer transition-colors" %>
    <% end %>
  </div>
</div>
