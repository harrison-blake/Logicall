<header class="bg-white shadow-sm">
  <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8 flex justify-between items-center">
    <h1 class="text-lg font-semibold text-gray-900">
      Intakes
    </h1>
    <%= link_to "Dashboard", dashboard_path, class: "text-sm text-blue-600 hover:text-blue-700" %>
  </div>
</header>

<main class="container mx-auto mt-8 px-5">
  <div class="mb-6">
    <%= link_to "New Intake", new_intake_path, class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition-colors" %>
  </div>
  <% if @intakes.any? %>
    <div class="bg-white shadow overflow-hidden rounded-md">
      <ul class="divide-y divide-gray-200">
        <% @intakes.each do |intake| %>
          <li class="px-4 py-4">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-gray-900"><%= intake.name %></p>
                <p class="text-sm text-gray-500"><%= intake.email %> | <%= intake.phone_number %></p>
              </div>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= intake.urgency == 'high' ? 'bg-red-100 text-red-800' : 'bg-gray-100 text-gray-800' %>">
                <%= intake.urgency %>
              </span>
            </div>
            <% if intake.details.present? %>
              <p class="mt-2 text-sm text-gray-600"><%= intake.details %></p>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  <% else %>
    <p class="text-gray-500">No intakes yet.</p>
  <% end %>
</main>
