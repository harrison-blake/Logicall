<div class="max-w-md mx-auto mt-16">
  <h1 class="text-2xl font-semibold mb-2">Edit Intake</h1>
  <p class="text-gray-600 mb-8">Update patient intake information.</p>

  <%= form_with model: @intake, class: "space-y-6" do |form| %>
    <% if @intake.errors.any? %>
      <div class="text-sm text-red-600 space-y-1">
        <% @intake.errors.full_messages.each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>

    <div>
      <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :name, autofocus: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <div>
      <%= form.label :phone_number, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :phone_number, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <div>
      <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <div>
      <%= form.label :details, "Patient request", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_area :details, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <div>
      <%= form.label :urgency, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.select :urgency, [["Low", "low"], ["Medium", "medium"], ["High", "high"]], { include_blank: "Select urgency" }, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <div>
      <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.select :status, [["Pending", "pending"], ["Reviewed", "reviewed"]], {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <div>
      <%= form.label :staff_notes, "Staff notes", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_area :staff_notes, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <%= form.submit "Update Intake", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition-colors" %>
  <% end %>

  <p class="mt-6 text-center">
    <%= link_to "Back to Intakes", intakes_path, class: "text-sm text-blue-600 hover:text-blue-700" %>
  </p>
</div>
