<div class="px-6 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="mb-8">
      <h1 class="text-2xl font-semibold tracking-tight text-stone-900 dark:text-stone-100 mb-1">Edit intake</h1>
      <p class="text-sm text-stone-400 dark:text-stone-500">Update patient intake information.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <%= form_with model: @intake, class: "space-y-5" do |form| %>
          <% if @intake.errors.any? %>
            <div class="text-sm text-rose-600 dark:text-rose-400 bg-rose-50 dark:bg-rose-900/30 rounded-lg p-3 space-y-1">
              <% @intake.errors.full_messages.each do |message| %>
                <p><%= message %></p>
              <% end %>
            </div>
          <% end %>

          <div>
            <%= form.label :name, class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
            <%= form.text_field :name, autofocus: true, class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
          </div>

          <div>
            <%= form.label :phone_number, class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
            <%= form.text_field :phone_number, class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
          </div>

          <div>
            <%= form.label :email, class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
            <%= form.email_field :email, class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
          </div>

          <div>
            <%= form.label :details, "Patient request", class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
            <%= form.text_area :details, rows: 4, class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors resize-none" %>
          </div>

          <div>
            <%= form.label :urgency, class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
            <%= form.select :urgency, [["Low", "low"], ["Medium", "medium"], ["High", "high"]], { include_blank: "Select urgency" }, class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
          </div>

          <div>
            <%= form.label :status, class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
            <%= form.select :status, [["Pending", "pending"], ["Reviewed", "reviewed"]], {}, class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
          </div>

          <div>
            <%= form.label :staff_notes, "Staff notes", class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
            <%= form.text_area :staff_notes, rows: 4, class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors resize-none" %>
          </div>

          <%= form.submit "Update intake", class: "w-full bg-violet-600 hover:bg-violet-700 text-white text-sm font-medium py-2.5 rounded-lg cursor-pointer transition-colors" %>
        <% end %>
      </div>

      <div>
        <div class="bg-white dark:bg-stone-900 rounded-xl shadow-sm p-5">
          <p class="text-xs font-medium uppercase tracking-wider text-stone-400 dark:text-stone-500 mb-4">Tasks</p>

          <% if @intake.tasks.any? %>
            <ul class="space-y-2 mb-4">
              <% @intake.tasks.each do |task| %>
                <li class="flex items-center gap-2 text-sm p-2.5 rounded-lg <%= task.completed? ? 'bg-emerald-50 dark:bg-emerald-900/20' : 'bg-stone-50 dark:bg-stone-800' %>">
                  <%= form_with url: intake_task_path(@intake, task), method: :patch, class: "flex items-center gap-2.5 flex-1" do |f| %>
                    <%= f.hidden_field :status, name: "task[status]", value: task.completed? ? "pending" : "completed" %>
                    <%= f.submit task.completed? ? "\u2713" : "", class: "w-5 h-5 rounded-md border #{task.completed? ? 'bg-emerald-500 border-emerald-500 text-white' : 'bg-white dark:bg-stone-900 border-stone-300 dark:border-stone-600 hover:border-violet-400'} cursor-pointer text-xs flex items-center justify-center transition-colors" %>
                    <span class="<%= task.completed? ? 'text-emerald-700 dark:text-emerald-400 line-through' : 'text-stone-700 dark:text-stone-300' %>"><%= task.subject %></span>
                  <% end %>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p class="text-sm text-stone-400 dark:text-stone-500 mb-4">No tasks yet.</p>
          <% end %>

          <%= form_with url: intake_tasks_path(@intake), method: :post, class: "flex gap-2" do |f| %>
            <%= f.text_field :subject, name: "task[subject]", placeholder: "Add a task...", class: "flex-1 px-3.5 py-2 text-sm bg-stone-50 dark:bg-stone-800 border border-stone-200 dark:border-stone-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
            <%= f.submit "Add", class: "px-4 py-2 text-sm bg-stone-100 dark:bg-stone-800 hover:bg-stone-200 dark:hover:bg-stone-700 text-stone-600 dark:text-stone-300 font-medium rounded-lg transition-colors cursor-pointer" %>
          <% end %>
        </div>
      </div>
    </div>

    <p class="mt-8 text-center">
      <%= link_to "Back to intakes", intakes_path, class: "text-sm text-stone-400 dark:text-stone-500 hover:text-stone-600 dark:hover:text-stone-300 transition-colors" %>
    </p>
  </div>
</div>
