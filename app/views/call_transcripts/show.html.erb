<div class="px-6 py-8">
  <div class="max-w-3xl mx-auto">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-xl font-semibold tracking-tight text-stone-900 dark:text-stone-100">Call details</h1>
      <%= link_to "Back to calls", call_transcripts_path, class: "text-sm text-stone-400 dark:text-stone-500 hover:text-stone-600 dark:hover:text-stone-300 transition-colors" %>
    </div>

    <div class="bg-white dark:bg-stone-900 rounded-xl shadow-sm p-6 space-y-6">
      <div class="grid grid-cols-2 gap-4 text-sm">
        <div>
          <span class="text-xs font-medium uppercase tracking-wider text-stone-400 dark:text-stone-500">Caller</span>
          <p class="font-medium text-stone-900 dark:text-stone-100 mt-0.5"><%= @call_transcript.caller_phone || "Unknown" %></p>
        </div>
        <div>
          <span class="text-xs font-medium uppercase tracking-wider text-stone-400 dark:text-stone-500">Duration</span>
          <p class="font-medium text-stone-900 dark:text-stone-100 mt-0.5 tabular-nums"><%= @call_transcript.call_duration || "N/A" %> seconds</p>
        </div>
        <div>
          <span class="text-xs font-medium uppercase tracking-wider text-stone-400 dark:text-stone-500">Date</span>
          <p class="font-medium text-stone-900 dark:text-stone-100 mt-0.5 tabular-nums"><%= @call_transcript.created_at.strftime("%b %d, %Y at %l:%M %p") %></p>
        </div>
        <div>
          <span class="text-xs font-medium uppercase tracking-wider text-stone-400 dark:text-stone-500">Status</span>
          <p class="mt-0.5">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @call_transcript.completed? ? 'bg-emerald-50 dark:bg-emerald-900/30 text-emerald-600 dark:text-emerald-400' : 'bg-rose-50 dark:bg-rose-900/30 text-rose-600 dark:text-rose-400' %>">
              <%= @call_transcript.status %>
            </span>
          </p>
        </div>
        <% if @call_transcript.intake.present? %>
          <div>
            <span class="text-xs font-medium uppercase tracking-wider text-stone-400 dark:text-stone-500">Intake</span>
            <p class="mt-0.5">
              <%= link_to @call_transcript.intake.name, intake_path(@call_transcript.intake), class: "text-violet-600 hover:text-violet-700 dark:text-violet-400 dark:hover:text-violet-300 font-medium transition-colors" %>
            </p>
          </div>
        <% end %>
      </div>

      <div class="border-t border-stone-100 dark:border-stone-800 pt-6">
        <p class="text-xs font-medium uppercase tracking-wider text-stone-400 dark:text-stone-500 mb-4">Transcript</p>
        <div class="space-y-3">
          <% if @call_transcript.transcript.present? %>
            <% transcript = @call_transcript.transcript.is_a?(String) ? JSON.parse(@call_transcript.transcript) : @call_transcript.transcript rescue @call_transcript.transcript %>
            <% if transcript.is_a?(Array) %>
              <% transcript.each do |turn| %>
                <div class="<%= turn['role'] == 'agent' ? 'bg-violet-50 dark:bg-violet-900/20 border-l-2 border-violet-400 dark:border-violet-500' : 'bg-stone-50 dark:bg-stone-800 border-l-2 border-stone-300 dark:border-stone-600' %> p-3.5 rounded-r-lg">
                  <p class="text-xs font-medium text-stone-400 dark:text-stone-500 mb-1"><%= turn['role']&.capitalize %></p>
                  <p class="text-sm text-stone-700 dark:text-stone-300 leading-relaxed"><%= turn['message'] %></p>
                </div>
              <% end %>
            <% else %>
              <p class="text-sm text-stone-700 dark:text-stone-300 whitespace-pre-wrap leading-relaxed"><%= transcript %></p>
            <% end %>
          <% else %>
            <p class="text-sm text-stone-400 dark:text-stone-500">No transcript available.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
