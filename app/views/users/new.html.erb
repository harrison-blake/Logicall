<div class="min-h-screen flex flex-col">
  <nav class="flex justify-between items-center px-6 py-4">
    <%= link_to "LOGICALL", root_path, class: "text-sm font-medium tracking-wide" %>
    <div class="flex gap-6 text-sm">
      <%= link_to "Log in", login_path, class: "text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100" %>
    </div>
  </nav>

  <main class="flex-1 flex items-center justify-center px-6 py-8">
    <div class="w-full max-w-xs">
      <h1 class="text-xl font-semibold mb-1">Create your account</h1>
      <p class="text-sm text-gray-500 dark:text-gray-400 mb-6">Step 2 of 2: Your details</p>

      <%= form_with model: @user, url: account_users_path(@account), class: "space-y-4" do |form| %>
        <%= form.hidden_field :account_id, value: @account.id %>

        <% if @user.errors.any? %>
          <div class="text-sm text-red-600 dark:text-red-400 space-y-1">
            <% @user.errors.full_messages.each do |message| %>
              <p><%= message %></p>
            <% end %>
          </div>
        <% end %>

        <div>
          <%= form.label :name, class: "block text-sm text-gray-600 dark:text-gray-400 mb-1" %>
          <%= form.text_field :name, autofocus: true, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded text-sm focus:outline-none focus:ring-1 focus:ring-blue-500 bg-white dark:bg-gray-800" %>
        </div>

        <div>
          <%= form.label :email, class: "block text-sm text-gray-600 dark:text-gray-400 mb-1" %>
          <%= form.email_field :email, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded text-sm focus:outline-none focus:ring-1 focus:ring-blue-500 bg-white dark:bg-gray-800" %>
        </div>

        <div>
          <%= form.label :password, class: "block text-sm text-gray-600 dark:text-gray-400 mb-1" %>
          <%= form.password_field :password, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded text-sm focus:outline-none focus:ring-1 focus:ring-blue-500 bg-white dark:bg-gray-800" %>
        </div>

        <div>
          <%= form.label :password_confirmation, "Confirm password", class: "block text-sm text-gray-600 dark:text-gray-400 mb-1" %>
          <%= form.password_field :password_confirmation, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded text-sm focus:outline-none focus:ring-1 focus:ring-blue-500 bg-white dark:bg-gray-800" %>
        </div>

        <%= form.submit "Create account", class: "w-full bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium py-2 rounded cursor-pointer" %>
      <% end %>

      <p class="mt-6 text-center text-sm text-gray-500 dark:text-gray-400">
        Already have an account? <%= link_to "Log in", login_path, class: "text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300" %>
      </p>
    </div>
  </main>
</div>
