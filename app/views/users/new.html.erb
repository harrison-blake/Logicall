<div class="min-h-screen flex flex-col bg-white dark:bg-stone-950">
  <nav class="flex justify-between items-center px-6 h-14">
    <%= link_to "LOGICALL", root_path, class: "text-xs font-semibold tracking-[0.2em] text-stone-900 dark:text-stone-100" %>
    <div class="flex items-center gap-4 text-sm">
      <%= link_to "Log in", login_path, class: "text-stone-500 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 transition-colors" %>
    </div>
  </nav>

  <main class="flex-1 flex items-center justify-center px-6 py-8">
    <div class="w-full max-w-sm">
      <div class="mb-8">
        <h1 class="text-2xl font-semibold tracking-tight text-stone-900 dark:text-stone-100 mb-1">Create your account</h1>
        <p class="text-sm text-stone-400 dark:text-stone-500">Step 2 of 2 &middot; Your details</p>
      </div>

      <%= form_with model: @user, url: account_users_path(@account), class: "space-y-5" do |form| %>
        <%= form.hidden_field :account_id, value: @account.id %>

        <% if @user.errors.any? %>
          <div class="text-sm text-rose-600 dark:text-rose-400 bg-rose-50 dark:bg-rose-900/30 rounded-lg p-3 space-y-1">
            <% @user.errors.full_messages.each do |message| %>
              <p><%= message %></p>
            <% end %>
          </div>
        <% end %>

        <div>
          <%= form.label :name, class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
          <%= form.text_field :name, autofocus: true, class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
        </div>

        <div>
          <%= form.label :email, class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
          <%= form.email_field :email, class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
        </div>

        <div>
          <%= form.label :password, class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
          <%= form.password_field :password, class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
        </div>

        <div>
          <%= form.label :password_confirmation, "Confirm password", class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
          <%= form.password_field :password_confirmation, class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
        </div>

        <%= form.submit "Create account", class: "w-full bg-violet-600 hover:bg-violet-700 text-white text-sm font-medium py-2.5 rounded-lg cursor-pointer transition-colors" %>
      <% end %>

      <p class="mt-8 text-center text-sm text-stone-400 dark:text-stone-500">
        Already have an account? <%= link_to "Log in", login_path, class: "text-violet-600 hover:text-violet-700 dark:text-violet-400 dark:hover:text-violet-300 font-medium" %>
      </p>
    </div>
  </main>
</div>
