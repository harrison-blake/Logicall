<div class="container mx-auto mt-8 px-5">
  <h1 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-6">Profile</h1>
  <div class="max-w-md">
    <%= form_with model: @user, url: account_user_path(@account, @user), method: :patch, class: "space-y-4" do |form| %>
      <% if @user.errors.any? %>
        <div class="text-sm text-red-600 dark:text-red-400 space-y-1">
          <% @user.errors.full_messages.each do |message| %>
            <p><%= message %></p>
          <% end %>
        </div>
      <% end %>

      <div>
        <%= form.label :name, class: "block text-sm text-gray-600 dark:text-gray-400 mb-1" %>
        <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded text-sm focus:outline-none focus:ring-1 focus:ring-blue-500 bg-white dark:bg-gray-800" %>
      </div>

      <div>
        <%= form.label :email, class: "block text-sm text-gray-600 dark:text-gray-400 mb-1" %>
        <%= form.email_field :email, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded text-sm focus:outline-none focus:ring-1 focus:ring-blue-500 bg-white dark:bg-gray-800" %>
      </div>

      <div>
        <%= form.label :password, "New password", class: "block text-sm text-gray-600 dark:text-gray-400 mb-1" %>
        <%= form.password_field :password, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded text-sm focus:outline-none focus:ring-1 focus:ring-blue-500 bg-white dark:bg-gray-800" %>
        <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Leave blank to keep current password</p>
      </div>

      <div>
        <%= form.label :password_confirmation, "Confirm new password", class: "block text-sm text-gray-600 dark:text-gray-400 mb-1" %>
        <%= form.password_field :password_confirmation, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded text-sm focus:outline-none focus:ring-1 focus:ring-blue-500 bg-white dark:bg-gray-800" %>
      </div>

      <%= form.submit "Save changes", class: "bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium py-2 px-4 rounded cursor-pointer" %>
    <% end %>
  </div>
</div>
