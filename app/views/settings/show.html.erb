<div class="px-6 py-8">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-2xl font-semibold tracking-tight text-stone-900 dark:text-stone-100 mb-6">Settings</h1>

    <div class="flex gap-1 mb-8 bg-stone-100 dark:bg-stone-800 rounded-lg p-1">
      <% if current_user.owner? %>
        <%= link_to "Account", settings_path(tab: "account"), class: "flex-1 text-center px-4 py-2 text-sm font-medium rounded-md transition-colors #{@tab == 'account' ? 'bg-white dark:bg-stone-900 text-stone-900 dark:text-stone-100 shadow-sm' : 'text-stone-500 dark:text-stone-400 hover:text-stone-700 dark:hover:text-stone-300'}" %>
      <% end %>
      <%= link_to "Profile", settings_path(tab: "profile"), class: "flex-1 text-center px-4 py-2 text-sm font-medium rounded-md transition-colors #{@tab == 'profile' ? 'bg-white dark:bg-stone-900 text-stone-900 dark:text-stone-100 shadow-sm' : 'text-stone-500 dark:text-stone-400 hover:text-stone-700 dark:hover:text-stone-300'}" %>
      <% if current_user.owner? %>
        <%= link_to "Hiring", settings_path(tab: "hiring"), class: "flex-1 text-center px-4 py-2 text-sm font-medium rounded-md transition-colors #{@tab == 'hiring' ? 'bg-white dark:bg-stone-900 text-stone-900 dark:text-stone-100 shadow-sm' : 'text-stone-500 dark:text-stone-400 hover:text-stone-700 dark:hover:text-stone-300'}" %>
        <%= link_to "AI", settings_path(tab: "front_office_ai"), class: "flex-1 text-center px-4 py-2 text-sm font-medium rounded-md transition-colors #{@tab == 'front_office_ai' ? 'bg-white dark:bg-stone-900 text-stone-900 dark:text-stone-100 shadow-sm' : 'text-stone-500 dark:text-stone-400 hover:text-stone-700 dark:hover:text-stone-300'}" %>
      <% end %>
    </div>

    <%# Account tab %>
    <% if @tab == "account" && current_user.owner? %>
      <%= form_with model: @account, class: "space-y-5" do |form| %>
        <% if @account.errors.any? %>
          <div class="text-sm text-rose-600 dark:text-rose-400 bg-rose-50 dark:bg-rose-900/30 rounded-lg p-3 space-y-1">
            <% @account.errors.full_messages.each do |message| %>
              <p><%= message %></p>
            <% end %>
          </div>
        <% end %>

        <div>
          <%= form.label :company_name, class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
          <%= form.text_field :company_name, class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
        </div>

        <div>
          <%= form.label :industry, class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
          <%= form.text_field :industry, class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
        </div>

        <div>
          <%= form.label :email, class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
          <%= form.email_field :email, class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
        </div>

        <div>
          <%= form.label :phone_number, class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
          <%= form.text_field :phone_number, class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
        </div>

        <div>
          <%= form.label :twilio_phone_number, "Twilio phone number", class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
          <%= form.text_field :twilio_phone_number, placeholder: "+15551234567", class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
          <p class="mt-1.5 text-xs text-stone-400 dark:text-stone-500">Your Twilio number for receiving calls via ElevenLabs.</p>
        </div>

        <div>
          <%= form.label :telnyx_api_key, "Telnyx API key", class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
          <%= form.password_field :telnyx_api_key,
              placeholder: @account.telnyx_configured? ? "••••••••  (set — leave blank to keep)" : "KEY_...",
              class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
          <p class="mt-1.5 text-xs text-stone-400 dark:text-stone-500">
            Found in your <a href="https://portal.telnyx.com" target="_blank" class="underline hover:text-stone-600 dark:hover:text-stone-300">Telnyx dashboard</a>. Leave blank to keep the current key.
          </p>
        </div>

        <%= form.submit "Save changes", class: "w-full bg-violet-600 hover:bg-violet-700 text-white text-sm font-medium py-2.5 rounded-lg cursor-pointer transition-colors" %>
      <% end %>
    <% end %>

    <%# Profile tab %>
    <% if @tab == "profile" %>
      <%= form_with model: @user, url: account_user_path(@account, @user), method: :patch, class: "space-y-5" do |form| %>
        <% if @user.errors.any? %>
          <div class="text-sm text-rose-600 dark:text-rose-400 bg-rose-50 dark:bg-rose-900/30 rounded-lg p-3 space-y-1">
            <% @user.errors.full_messages.each do |message| %>
              <p><%= message %></p>
            <% end %>
          </div>
        <% end %>

        <div>
          <%= form.label :name, class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
          <%= form.text_field :name, class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
        </div>

        <div>
          <%= form.label :email, class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
          <%= form.email_field :email, class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
        </div>

        <div>
          <%= form.label :password, "New password", class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
          <%= form.password_field :password, class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
          <p class="text-xs text-stone-400 dark:text-stone-500 mt-1.5">Leave blank to keep current password</p>
        </div>

        <div>
          <%= form.label :password_confirmation, "Confirm new password", class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
          <%= form.password_field :password_confirmation, class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
        </div>

        <%= form.submit "Save changes", class: "w-full bg-violet-600 hover:bg-violet-700 text-white text-sm font-medium py-2.5 rounded-lg cursor-pointer transition-colors" %>
      <% end %>
    <% end %>

    <%# Front Office AI tab %>
    <% if @tab == "front_office_ai" && current_user.owner? %>
      <%= form_with model: @account, class: "space-y-5" do |form| %>
        <div class="bg-white dark:bg-stone-900 rounded-xl shadow-sm p-5">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-stone-700 dark:text-stone-300">Auto-process call transcripts</p>
              <p class="text-xs text-stone-400 dark:text-stone-500 mt-0.5">Automatically create intakes and tasks from incoming calls.</p>
            </div>
            <label class="relative inline-flex items-center cursor-pointer">
              <%= form.check_box :auto_process_transcripts, class: "sr-only peer" %>
              <div class="w-11 h-6 bg-stone-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-violet-300/40 dark:peer-focus:ring-violet-800/40 rounded-full peer dark:bg-stone-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-stone-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-stone-600 peer-checked:bg-violet-600"></div>
            </label>
          </div>
        </div>

        <div>
          <%= form.label :default_intake_owner_id, "Default intake owner", class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
          <%= form.collection_select :default_intake_owner_id, @account.users.order(:name), :id, :name, { include_blank: "Account owner (default)" }, class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
          <p class="mt-1.5 text-xs text-stone-400 dark:text-stone-500">User who will own auto-generated intakes.</p>
        </div>

        <div>
          <%= form.label :gemini_api_key, "Gemini API key", class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
          <%= form.password_field :gemini_api_key,
              placeholder: @account.gemini_configured? ? "••••••••  (set — leave blank to keep)" : "AIza...",
              class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
          <p class="mt-1.5 text-xs text-stone-400 dark:text-stone-500">
            Get your key at <a href="https://aistudio.google.com/app/apikey" target="_blank" class="underline hover:text-stone-600 dark:hover:text-stone-300">Google AI Studio</a>. Leave blank to keep the current key.
          </p>
        </div>

        <%= form.submit "Save changes", class: "w-full bg-violet-600 hover:bg-violet-700 text-white text-sm font-medium py-2.5 rounded-lg cursor-pointer transition-colors" %>
      <% end %>
    <% end %>

    <%# Hiring tab %>
    <% if @tab == "hiring" && current_user.owner? %>
      <p class="text-sm text-stone-400 dark:text-stone-500 mb-4">Default steps automatically added to every new applicant.</p>

      <div class="bg-white dark:bg-stone-900 rounded-xl shadow-sm p-5">
        <% if @default_onboarding_steps.any? %>
          <ul class="space-y-1.5 mb-4">
            <% @default_onboarding_steps.each do |step| %>
              <li class="flex items-center justify-between text-sm p-2.5 rounded-lg bg-stone-50 dark:bg-stone-800">
                <span class="text-stone-700 dark:text-stone-300"><%= step.title %></span>
                <%= link_to remove_default_step_accounts_path(step), data: { turbo_method: :delete, turbo_confirm: "Remove this default step?" }, class: "text-stone-300 dark:text-stone-600 hover:text-rose-500 text-xs transition-colors" do %>
                  &times;
                <% end %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-sm text-stone-400 dark:text-stone-500 mb-4">No default steps yet.</p>
        <% end %>

        <%= form_with url: add_default_step_accounts_path, method: :post, class: "flex gap-2" do |f| %>
          <%= text_field_tag :title, nil, placeholder: "Add a default step...", class: "flex-1 px-3.5 py-2 bg-stone-50 dark:bg-stone-800 border border-stone-200 dark:border-stone-700 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
          <%= f.submit "Add", class: "bg-stone-100 dark:bg-stone-800 hover:bg-stone-200 dark:hover:bg-stone-700 text-stone-600 dark:text-stone-300 text-sm font-medium py-2 px-4 rounded-lg cursor-pointer transition-colors" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
