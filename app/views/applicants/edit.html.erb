<div class="px-6 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="mb-8">
      <h1 class="text-2xl font-semibold tracking-tight text-stone-900 dark:text-stone-100 mb-1">Edit applicant</h1>
      <p class="text-sm text-stone-400 dark:text-stone-500"><%= @applicant.user.name %> &middot; <%= @applicant.user.email %></p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <%= form_with model: @applicant, class: "space-y-5" do |form| %>
          <% if @applicant.errors.any? %>
            <div class="text-sm text-rose-600 dark:text-rose-400 bg-rose-50 dark:bg-rose-900/30 rounded-lg p-3 space-y-1">
              <% @applicant.errors.full_messages.each do |message| %>
                <p><%= message %></p>
              <% end %>
            </div>
          <% end %>

          <div>
            <%= form.label :position, class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
            <%= form.text_field :position, class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
          </div>

          <div>
            <%= form.label :notes, class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
            <%= form.text_area :notes, rows: 4, class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors resize-none" %>
          </div>

          <div>
            <%= form.label :status, class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
            <%= form.select :status, Applicant.statuses.keys.map { |s| [s.humanize, s] }, {}, class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
          </div>

          <%= form.submit "Update applicant", class: "w-full bg-violet-600 hover:bg-violet-700 text-white text-sm font-medium py-2.5 rounded-lg cursor-pointer transition-colors" %>
        <% end %>

        <%= link_to applicant_path(@applicant), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this applicant? This cannot be undone." }, class: "block w-full text-center text-sm text-rose-500 hover:text-rose-600 dark:text-rose-400 dark:hover:text-rose-300 mt-4 transition-colors" do %>
          Delete applicant
        <% end %>
      </div>

      <div class="space-y-5">
        <%# Progress card %>
        <div class="bg-white dark:bg-stone-900 rounded-xl shadow-sm p-5">
          <p class="text-xs font-medium uppercase tracking-wider text-stone-400 dark:text-stone-500 mb-3">Progress</p>
          <% total = @applicant.onboarding_steps.size %>
          <% done = @applicant.onboarding_steps.count { |s| s.completed? } %>
          <p class="text-3xl font-bold text-stone-900 dark:text-stone-100 tabular-nums"><%= done %><span class="text-stone-300 dark:text-stone-600"> / <%= total %></span></p>
          <% if total > 0 %>
            <div class="w-full bg-stone-100 dark:bg-stone-800 rounded-full h-1.5 mt-3">
              <div class="bg-violet-500 h-1.5 rounded-full transition-all" style="width: <%= (done.to_f / total * 100).round %>%"></div>
            </div>
          <% end %>
          <p class="text-xs text-stone-400 dark:text-stone-500 mt-2">steps completed</p>
        </div>

        <%# Attachments %>
        <div class="bg-white dark:bg-stone-900 rounded-xl shadow-sm p-5">
          <p class="text-xs font-medium uppercase tracking-wider text-stone-400 dark:text-stone-500 mb-3">Attachments</p>

          <% if @applicant.attachments.any? %>
            <ul class="space-y-1.5 mb-4">
              <% @applicant.attachments.each do |attachment| %>
                <li class="flex items-center justify-between text-sm p-2.5 rounded-lg bg-stone-50 dark:bg-stone-800">
                  <%= link_to attachment.filename, rails_blob_path(attachment, disposition: "attachment"), class: "text-violet-600 hover:text-violet-700 dark:text-violet-400 dark:hover:text-violet-300 font-medium transition-colors" %>
                  <span class="text-xs text-stone-400 dark:text-stone-500 tabular-nums"><%= attachment.created_at.strftime("%b %d, %Y") %></span>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p class="text-sm text-stone-400 dark:text-stone-500 mb-4">No attachments yet.</p>
          <% end %>

          <%= form_with url: upload_attachments_applicant_path(@applicant), method: :post, multipart: true, class: "flex gap-2 items-end" do |f| %>
            <div class="flex-1">
              <%= file_field_tag :attachments, multiple: true, class: "block w-full text-sm text-stone-500 dark:text-stone-400 file:mr-3 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-medium file:bg-violet-50 file:text-violet-700 dark:file:bg-violet-900/30 dark:file:text-violet-400 hover:file:bg-violet-100 dark:hover:file:bg-violet-900/50 file:cursor-pointer file:transition-colors" %>
            </div>
            <%= f.submit "Upload", class: "bg-stone-100 dark:bg-stone-800 hover:bg-stone-200 dark:hover:bg-stone-700 text-stone-600 dark:text-stone-300 text-sm font-medium py-2 px-4 rounded-lg cursor-pointer transition-colors" %>
          <% end %>
        </div>

        <%# Hiring steps %>
        <div class="bg-white dark:bg-stone-900 rounded-xl shadow-sm p-5">
          <p class="text-xs font-medium uppercase tracking-wider text-stone-400 dark:text-stone-500 mb-3">Hiring steps</p>

          <% if @applicant.onboarding_steps.any? %>
            <ul class="space-y-1.5 mb-4">
              <% @applicant.onboarding_steps.order(:position).each do |step| %>
                <li class="flex items-center justify-between text-sm p-2.5 rounded-lg <%= step.completed? ? 'bg-emerald-50 dark:bg-emerald-900/20' : 'bg-stone-50 dark:bg-stone-800' %>">
                  <div class="flex items-center gap-2.5">
                    <%= link_to toggle_step_applicants_path(step), data: { turbo_method: :patch }, class: "block" do %>
                      <span class="w-5 h-5 rounded-md border flex items-center justify-center text-xs cursor-pointer transition-colors <%= step.completed? ? 'bg-emerald-500 border-emerald-500 text-white' : 'bg-white dark:bg-stone-900 border-stone-300 dark:border-stone-600 hover:border-violet-400' %>">
                        <%= step.completed? ? '&#10003;'.html_safe : '' %>
                      </span>
                    <% end %>
                    <span class="<%= step.completed? ? 'text-emerald-700 dark:text-emerald-400 line-through' : 'text-stone-700 dark:text-stone-300' %>"><%= step.title %></span>
                  </div>
                  <%= link_to remove_step_applicants_path(step), data: { turbo_method: :delete, turbo_confirm: "Remove this step?" }, class: "text-stone-300 dark:text-stone-600 hover:text-rose-500 text-xs transition-colors" do %>
                    &times;
                  <% end %>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p class="text-sm text-stone-400 dark:text-stone-500 mb-4">No hiring steps yet.</p>
          <% end %>

          <%= form_with url: add_step_applicants_path, method: :post, class: "flex gap-2" do |f| %>
            <%= hidden_field_tag :applicant_id, @applicant.id %>
            <%= text_field_tag :title, nil, placeholder: "Add a step...", class: "flex-1 px-3.5 py-2 bg-stone-50 dark:bg-stone-800 border border-stone-200 dark:border-stone-700 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
            <%= f.submit "Add", class: "bg-stone-100 dark:bg-stone-800 hover:bg-stone-200 dark:hover:bg-stone-700 text-stone-600 dark:text-stone-300 text-sm font-medium py-2 px-4 rounded-lg cursor-pointer transition-colors" %>
          <% end %>
        </div>
      </div>
    </div>

    <p class="mt-8 text-center">
      <%= link_to "Back to pipeline", applicants_path, class: "text-sm text-stone-400 dark:text-stone-500 hover:text-stone-600 dark:hover:text-stone-300 transition-colors" %>
    </p>
  </div>
</div>
