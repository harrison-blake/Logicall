<div class="max-w-4xl mx-auto mt-16 px-4">
  <div class="mb-8">
    <h1 class="text-2xl font-semibold mb-2">Edit Applicant</h1>
    <p class="text-gray-600 dark:text-gray-400"><%= @applicant.user.name %> &mdash; <%= @applicant.user.email %></p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <div>
      <%= form_with model: @applicant, class: "space-y-6" do |form| %>
        <% if @applicant.errors.any? %>
          <div class="text-sm text-red-600 dark:text-red-400 space-y-1">
            <% @applicant.errors.full_messages.each do |message| %>
              <p><%= message %></p>
            <% end %>
          </div>
        <% end %>

        <div>
          <%= form.label :position, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
          <%= form.text_field :position, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white dark:bg-gray-800" %>
        </div>

        <div>
          <%= form.label :notes, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
          <%= form.text_area :notes, rows: 4, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white dark:bg-gray-800" %>
        </div>

        <div>
          <%= form.label :status, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
          <%= form.select :status, Applicant.statuses.keys.map { |s| [s.humanize, s] }, {}, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white dark:bg-gray-800" %>
        </div>

        <%= form.submit "Update Applicant", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition-colors cursor-pointer" %>
      <% end %>

      <%= link_to applicant_path(@applicant), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this applicant? This cannot be undone." }, class: "block w-full text-center text-sm text-red-600 hover:text-red-700 dark:text-red-400 dark:hover:text-red-300 mt-4" do %>
        Delete applicant
      <% end %>
    </div>

    <div class="space-y-6">
      <%# Progress card %>
      <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-md p-6 space-y-4">
        <h2 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide">Onboarding Progress</h2>
        <% total = @applicant.onboarding_steps.size %>
        <% done = @applicant.onboarding_steps.count { |s| s.completed? } %>
        <p class="text-3xl font-bold text-gray-900 dark:text-gray-100"><%= done %> / <%= total %></p>
        <% if total > 0 %>
          <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
            <div class="bg-blue-600 h-2 rounded-full transition-all" style="width: <%= (done.to_f / total * 100).round %>%"></div>
          </div>
        <% end %>
        <p class="text-sm text-gray-500 dark:text-gray-400">steps completed</p>
      </div>

      <%# Onboarding steps %>
      <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-md p-6">
        <h2 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-3">Onboarding Steps</h2>

        <% if @applicant.onboarding_steps.any? %>
          <ul class="space-y-2 mb-4">
            <% @applicant.onboarding_steps.order(:position).each do |step| %>
              <li class="flex items-center justify-between text-sm p-2 rounded-md <%= step.completed? ? 'bg-green-50 dark:bg-green-900/30' : 'bg-gray-50 dark:bg-gray-700' %>">
                <div class="flex items-center gap-2">
                  <%= link_to toggle_step_applicants_path(step), data: { turbo_method: :patch }, class: "block" do %>
                    <span class="w-5 h-5 rounded border flex items-center justify-center text-xs cursor-pointer <%= step.completed? ? 'bg-green-500 border-green-500 text-white' : 'bg-white dark:bg-gray-800 border-gray-300 dark:border-gray-600 hover:border-blue-400' %>">
                      <%= step.completed? ? '&#10003;'.html_safe : '' %>
                    </span>
                  <% end %>
                  <span class="<%= step.completed? ? 'text-green-700 dark:text-green-300 line-through' : 'text-gray-900 dark:text-gray-100' %>"><%= step.title %></span>
                </div>
                <%= link_to remove_step_applicants_path(step), data: { turbo_method: :delete, turbo_confirm: "Remove this step?" }, class: "text-gray-400 hover:text-red-500 text-xs" do %>
                  &times;
                <% end %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-sm text-gray-400 dark:text-gray-500 mb-4">No onboarding steps yet.</p>
        <% end %>

        <%# Add new step %>
        <%= form_with url: add_step_applicants_path, method: :post, class: "flex gap-2" do |f| %>
          <%= hidden_field_tag :applicant_id, @applicant.id %>
          <%= text_field_tag :title, nil, placeholder: "Add a step...", class: "flex-1 px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md text-sm focus:outline-none focus:ring-1 focus:ring-blue-500 bg-white dark:bg-gray-800" %>
          <%= f.submit "Add", class: "bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 text-sm py-2 px-3 rounded-md cursor-pointer transition-colors" %>
        <% end %>
      </div>
    </div>
  </div>

  <p class="mt-8 text-center">
    <%= link_to "Back to Pipeline", applicants_path, class: "text-sm text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300" %>
  </p>
</div>
