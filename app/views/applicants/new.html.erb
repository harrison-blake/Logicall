<div class="max-w-md mx-auto mt-16">
  <h1 class="text-2xl font-semibold mb-2">New Applicant</h1>
  <p class="text-gray-600 dark:text-gray-400 mb-8">Add an applicant to move forward with.</p>

  <%= form_with model: @user, url: applicants_path, class: "space-y-6" do |form| %>
    <% if @user.errors.any? %>
      <div class="text-sm text-red-600 dark:text-red-400 space-y-1">
        <% @user.errors.full_messages.each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>

    <div>
      <%= form.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
      <%= form.text_field :name, autofocus: true, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white dark:bg-gray-800" %>
    </div>

    <div>
      <%= form.label :email, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
      <%= form.email_field :email, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white dark:bg-gray-800" %>
    </div>

    <div>
      <%= label_tag :position, "Position", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
      <%= text_field_tag "applicant[position]", nil, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white dark:bg-gray-800" %>
    </div>

    <div>
      <%= label_tag :notes, "Notes", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
      <%= text_area_tag "applicant[notes]", nil, rows: 4, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white dark:bg-gray-800" %>
    </div>

    <%= form.submit "Add Applicant", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition-colors cursor-pointer" %>
  <% end %>

  <p class="mt-6 text-center">
    <%= link_to "Back to Applicants", applicants_path, class: "text-sm text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300" %>
  </p>
</div>
