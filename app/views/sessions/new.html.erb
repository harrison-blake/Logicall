<div class="min-h-screen flex flex-col bg-white dark:bg-stone-950">
  <nav class="flex justify-between items-center px-6 h-14">
    <%= link_to "LOGICALL", root_path, class: "text-xs font-semibold tracking-[0.2em] text-stone-900 dark:text-stone-100" %>
    <div class="flex items-center gap-4 text-sm">
      <%= link_to "Sign up", new_account_path, class: "text-violet-600 hover:text-violet-700 dark:text-violet-400 dark:hover:text-violet-300 font-medium transition-colors" %>
    </div>
  </nav>

  <main class="flex-1 flex items-center justify-center px-6">
    <div class="w-full max-w-sm">
      <h1 class="text-2xl font-semibold tracking-tight text-stone-900 dark:text-stone-100 mb-8">Welcome back</h1>

      <%= form_with url: login_path, class: "space-y-5" do |form| %>
        <div>
          <%= form.label :email, class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
          <%= form.email_field :email, autofocus: true, class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
        </div>

        <div>
          <%= form.label :password, class: "block text-sm font-medium text-stone-600 dark:text-stone-400 mb-1.5" %>
          <%= form.password_field :password, class: "w-full px-3.5 py-2.5 bg-stone-50 dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-violet-500/40 focus:border-violet-500 transition-colors" %>
        </div>

        <%= form.submit "Log in", class: "w-full bg-violet-600 hover:bg-violet-700 text-white text-sm font-medium py-2.5 rounded-lg cursor-pointer transition-colors" %>
      <% end %>

      <p class="mt-8 text-center text-sm text-stone-400 dark:text-stone-500">
        Don't have an account? <%= link_to "Sign up", new_account_path, class: "text-violet-600 hover:text-violet-700 dark:text-violet-400 dark:hover:text-violet-300 font-medium" %>
      </p>
    </div>
  </main>
</div>
