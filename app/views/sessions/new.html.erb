<div class="min-h-screen flex flex-col">
  <nav class="flex justify-between items-center px-6 py-4">
    <%= link_to "LOGICALL", root_path, class: "text-sm font-medium tracking-wide" %>
    <div class="flex gap-6 text-sm">
      <%= link_to "Sign up", new_account_path, class: "text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300" %>
    </div>
  </nav>

  <main class="flex-1 flex items-center justify-center px-6">
    <div class="w-full max-w-xs">
      <h1 class="text-xl font-semibold mb-6">Log in</h1>

      <%= form_with url: login_path, class: "space-y-4" do |form| %>
        <div>
          <%= form.label :email, class: "block text-sm text-gray-600 dark:text-gray-400 mb-1" %>
          <%= form.email_field :email, autofocus: true, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded text-sm focus:outline-none focus:ring-1 focus:ring-blue-500 bg-white dark:bg-gray-800" %>
        </div>

        <div>
          <%= form.label :password, class: "block text-sm text-gray-600 dark:text-gray-400 mb-1" %>
          <%= form.password_field :password, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded text-sm focus:outline-none focus:ring-1 focus:ring-blue-500 bg-white dark:bg-gray-800" %>
        </div>

        <%= form.submit "Log in", class: "w-full bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium py-2 rounded cursor-pointer" %>
      <% end %>

      <p class="mt-6 text-center text-sm text-gray-500 dark:text-gray-400">
        Don't have an account? <%= link_to "Sign up", new_account_path, class: "text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300" %>
      </p>
    </div>
  </main>
</div>
